    @Override
    public void run() {
        ServerComunication instance = ServerComunication.getInstance();
        if (instance == null) {
            ShowMessages.ShowErrorMessage("Hubo un problema conectandose al servidor, Intente luego.", "Iproxys Error: Conectividad");
        } else {
            LoginServiceBeanRemote loginServiceBean = null;
            try {
                loginServiceBean = instance.getLoginServiceBean();
            } catch (Exception ex) {
            }
            if (loginServiceBean == null) {
                ShowMessages.ShowErrorMessage("Hubo un problema conectandose a la base de datos del Servidor.", "Iproxys Error: Conectividad");
            } else {
                boolean doLogin = false;
                try {
                    String pasword = "";
                    for (int i = 0; i < passwordTextField.getPassword().length; i++) {
                        pasword += passwordTextField.getPassword()[i];
                    }

                    doLogin = loginServiceBean.doLogin(usernameTextField.getText(), pasword);
                } catch (Exception ex) {
                    System.out.println(ex.getMessage());
                }
                if (doLogin) {
                  
                    IproxyClient.destroyLogin();
                     IproxyClient.showMainFrame();
                    System.out.println("Te logeaste");
                } else {
                    ShowMessages.ShowErrorMessage("Los Datos introducidos son inv√°lidos.", "Iproxys Error: Datos Incorrectos");
                }
            }
        }
        LoginButton.setEnabled(true);
        usernameTextField.setEnabled(true);
        passwordTextField.setEnabled(true);
        LoadingImage.setVisible(false);
        hilo = null;

    }
}
